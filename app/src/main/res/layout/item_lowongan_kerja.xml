<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/bg_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal : "
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tv_tanggal_lowongan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="25 Oktober 2022"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_black"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Pekerjaan : "
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tv_judul_lowongan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Mobile Android Developer"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/text_black"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kemampuan Kerja : "
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tv_kemampuan_kerja_lowongan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Kotlin, MVVM, Clean Architecture"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_black"

                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kerja : "
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tv_jenis_pekerjaan_lowongan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="WFO / Hybrid"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_black"

                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>