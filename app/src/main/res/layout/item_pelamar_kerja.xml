<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pelamar_kerja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/bg_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="12dp">

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="2">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Nama Pekerjaan : "
                  android:fontFamily="@font/poppins_medium"/>

              <TextView
                  android:id="@+id/tv_tanggal_pelamar"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:text="Mobile Android Developer"
                  android:fontFamily="@font/poppins_medium"
                  android:layout_marginStart="4dp"
                  android:textColor="@color/text_black"/>

          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="2">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tahun : "
                  android:fontFamily="@font/poppins_medium"/>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/poppins_medium"
                  tools:text="2022"
                  android:layout_marginStart="4dp"
                  android:textColor="@color/text_black"/>

          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="2">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Jurusan : "
                  android:fontFamily="@font/poppins_medium"/>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:text="RPL"
                  android:fontFamily="@font/poppins_medium"
                  android:layout_marginStart="4dp"
                  android:textColor="@color/text_black"/>

          </androidx.appcompat.widget.LinearLayoutCompat>

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Download CV Pelamar"
        app:layout_constraintStart_toStartOf="@id/cv_pelamar_kerja"
        app:layout_constraintTop_toBottomOf="@id/cv_pelamar_kerja" />

</androidx.constraintlayout.widget.ConstraintLayout>